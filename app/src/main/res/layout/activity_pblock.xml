<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"

    android:background="@drawable/back1"
    tools:context="com.example.hp.periodictable.PBlockActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P Block Elements:"
        android:textSize="24sp"
        android:textColor="#ffffff"
        />
    <TextView android:text=" p-block elements are placed from 13th to 18th group of the periodic table. They include metals, non-metals and metalloids. This block is better explained group wise and each group is known with its 1st element such as carbon family, nitrogen family, boron family etc." android:layout_width="wrap_content"
        android:textColor="@color/darkorange"
        android:textSize="16sp"
        android:layout_height="wrap_content" />

</LinearLayout>
